---
interface Props {
  title: string;
}

const { title } = Astro.props;

import Navigation from "../components/Navigation.astro";
---

<!DOCTYPE html>
<html lang="en" dir="rtl">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Almarai:wght@300;400;700;800&family=Cairo:wght@500;600;700&family=Poppins:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
	<link href="https://fonts.googleapis.com/css2?family=Kufam&display=swap" rel="stylesheet">

    <link
      href="https://fonts.googleapis.com/css2?family=Readex+Pro:wght@400;600;700&display=swap"
      rel="stylesheet"
    />

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="font-cairo">
    <Navigation />
    <slot />
  </body>
</html>
<style is:global></style>
